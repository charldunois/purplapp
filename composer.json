{
    "require": {
        "php": ">=5.4.20",
        "vlucas/phpdotenv": "1.0.6",
        "twig/twig": "~1.16.0",
        "silex/silex": "~1.2.1",
        "monolog/monolog": "~1.10.0",
        "symfony/twig-bridge": "~2.5.4",
        "symfony/debug": "~2.5.4",
        "guzzlehttp/guzzle": "~4.0.0",
        "psr/log": "*",
        "phpoption/phpoption": "~1.4.0",
        "nesbot/Carbon": "~1.13.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3.0",
        "codegyre/robo": "0.4.5",
        "symfony/browser-kit": "~2.5.4",
        "symfony/css-selector": "~2.5.4"
    },
    "autoload": {
        "psr-4": {
            "Purplapp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Purplapp\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist"
    }
}

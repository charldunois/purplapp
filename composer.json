{
    "require": {
        "vlucas/phpdotenv": "1.0.6",
        "twig/twig": "~1.16.0",
        "silex/silex": "~1.2.1",
        "monolog/monolog": "~1.10.0",
        "symfony/twig-bridge": "~2.5.4",
        "symfony/debug": "~2.5.4",
        "guzzlehttp/guzzle": "~4.0.0",
        "psr/log": "*",
        "phpoption/phpoption": "~1.4.0",
        "nesbot/Carbon": "~1.13.0",
        "kriswallsmith/assetic": "~1.1.2",
        "mheap/silex-assetic": "~1.0.4",
        "natxet/CssMin": "~3.0.2",
        "knplabs/github-api": "~1.2",
        "twig/extensions": "~1.1.0",
        "davedevelopment/twig-inflection": "1.0.*@dev",
        "codegyre/robo": "0.4.5",
        "gabrielelana/byte-units": "dev-master",
        "filp/whoops": "~1.1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3.0",
        "symfony/browser-kit": "~2.5.4",
        "symfony/css-selector": "~2.5.4",
        "codeclimate/php-test-reporter": "dev-master",
        "heroku/heroku-buildpack-php": "~49.0",
        "psy/psysh": "0.3.*"
    },
    "autoload": {
        "psr-4": {
            "Purplapp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Purplapp\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist"
    },
    "extra": {
        "heroku": {
            "document-root": "public",
            "index-document": "index.php",
            "framework": "silex",
            "compile": [
                "touch .config",
                "./bin/robo init",
                "./bin/robo clean",
                "./bin/robo bower",
                "./bin/robo assets"
            ]
        }
    }
}

{#
This is the base file for all HTML views
#}
{% use "flash_messages.twig" %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        {% block icons %}
        <link rel="shortcut icon" type="image/x-icon" href="/static/images/favicon.ico">
        <link rel="apple-touch-icon" href="/static/images/apple-touch-icon-precomposed.png"/>
        {% endblock %}

        {% block style %}
        {% endblock %}

        {% block stylesheets %}
            {% stylesheets "@styles" output="/css/style.min.css" combine=true %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}

        <title>{% block title %}Purplapp{% endblock %}</title>

        {% block head_scripts %}{% endblock %}

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block navbar %}{% endblock %}

        {% block flash_messages %}{% endblock %}

        <div class="{% block container %}{% endblock %}">{% block content %}{% endblock %}</div>

        {% block footer %}{% include "footer.twig" %}{% endblock %}

        <!-- Piwik -->
        <script type="text/javascript">
            var _paq = _paq || [];
            _paq.push(['trackPageView']);
            _paq.push(['enableLinkTracking']);
            (function() {
                var u="//enigma.jvimedia.org:81/piwik/";
                _paq.push(['setTrackerUrl', u+'piwik.php']);
                _paq.push(['setSiteId', 1]);

                var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];

                g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
            })();
        </script>
        <noscript><p><img src="//enigma.jvimedia.org:81/piwik/piwik.php?idsite=1" style="border:0;" alt="" /></p></noscript>
        <!-- End Piwik Code -->

        {% block tail_scripts %}
            {% javascripts "@scripts" output="/js/app.min.js" combine=true %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>

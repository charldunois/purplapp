{% extends "document.twig" %}

{% block container %}container{% endblock %}

{% block navbar %}
    {% include "navbar.twig" %}
{% endblock %}

{% block content %}
<!-- Left Column -->
<div class="jumbotron">
  <h1>Welcome!</h1>
  <p>Purplapp is an app for App.net statistics.</p>

  {% if is_guest() %}
  <p>
    <a href="{{ auth_url }}" class="btn btn-lg btn-social btn-adn">
        <i class="fa fa-adn"></i> Sign in with App.net
    </a>
  </p>
  {% endif %}

</div>

<div class="col-md-6">
    <h1>Features</h1>
    <h2>Account Features</h2>
    <p>
        <ul>
            <li>
                {% if not is_guest() %}<a href="/account/user">{% endif %}
                    Find details on your account and your PCA Clubs.
                {% if not is_guest() %}</a>{% endif %}
            </li>
            <li>
                {% if not is_guest() %}<a href="/account/mention">{% endif %}
                    Find the first mentions between two users.
                {% if not is_guest() %}</a>{% endif %}
            </li>
            <li>
                {% if not is_guest() %}<a href="/account/follow_comparison">{% endif %}
                    Compare your followers with that of another user.
                {% if not is_guest() %}</a>{% endif %}
            </li>
        </ul>
    </p>

    <h2>Broadcast Features</h2>

    <p>
        <ul>
            <li>
                {% if not is_guest() %}<a href="/broadcast/lookup">{% endif %}
                    See the most recent 5 updates in any Broadcast channel.
                {% if not is_guest() %}</a>{% endif %}
            </li>
        </ul>
    </p>

</div>

<!-- Right Column -->
<div class="col-md-6">
    <h1>Like what we've done?</h1>

    <p>
        Check us out on <a href="https://github.com/purplapp">GitHub</a>!
    </p>
    <p>
        <img src="https://img.shields.io/travis/purplapp/purplapp.svg?style=flat" alt="Purplapp build status">
    </p>
</div>

{% endblock %}
